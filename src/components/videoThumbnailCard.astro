---
import CheckedIcon from "./icons/checkedIcon.astro";
const randomId = Math.random().toString(16).replace("0.", "");
---

<div class="swiper-slide group relative max-w-72">
  <input
    class="peer absolute -left-2.5 -top-2.5 z-30 flex h-7 w-7 cursor-pointer opacity-0"
    type="radio"
    name="video"
    value={randomId}
  />
  <div
    class="absolute -left-2.5 -top-2.5 flex h-7 w-7 items-center justify-center rounded-full bg-gray-500 opacity-50 transition-all duration-200 group-hover:bg-gray-500 group-hover:opacity-50 peer-checked:rotate-0 peer-checked:bg-red-600 peer-checked:opacity-100 lg:opacity-0"
  >
    <CheckedIcon />
  </div>
  <div
    class="space-y-2 rounded-3xl border-2 border-transparent bg-white/20 p-1 pb-3 transition-all duration-200 peer-checked:border-red-600 peer-checked:shadow-xl peer-checked:shadow-red-600/50 sm:p-2.5 sm:pb-3"
  >
    <img
      draggable="false"
      src="/images/post-card-image.jpeg"
      class="aspect-square w-full rounded-2xl"
      alt="video thumbnail"
    />
    <p class="gap-1 overflow-hidden truncate text-xs sm:text-sm">
      <span>مدل طراحی:</span>
      <b>هنری</b>
    </p>
  </div>
</div>
