---
import HtmlLayout from "../layouts/htmlLayout.astro";
import Auth from "../layouts/auth.astro";
import OtpInput from "../components/otpInput.astro";
import EditIcon from "../components/icons/editIcon.astro";
---

<HtmlLayout>
  <Auth>
    <form class="space-y-8">
      <div class="flex items-center justify-between">
        <h3 class="text-2xl font-semibold">کد را وارد کنید</h3>
        <a href="/signin" class="scale-75">
          <EditIcon />
        </a>
      </div>
      <div>
        <p class="font-light">
          کد ورود از طریق پیامک به شماره 09303929013 ارسال شد
        </p>
      </div>

      <div class="space-y-2">
        <OtpInput len={5} name="opt" />
        <p class="font-semibold text-red-800">کد وارد شده صحیح نمیباشد!</p>
      </div>

      <div>
        <button
          class="flex h-16 w-full select-none items-center justify-center rounded-xl bg-primary text-2xl font-semibold"
        >
          ورود
        </button>
      </div>
    </form>
  </Auth>
</HtmlLayout>
